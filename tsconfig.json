{
    "compilerOptions": {
        "target": "es6",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "./src",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "exclude": [
        "./node_modules",
        "./src/app.ts"
    ]
}
